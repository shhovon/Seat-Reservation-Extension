{
  "manifest_version": 3,
  "name": "Seat Reservation Automation",
  "description": "Automatically book a seat at a specified time. Developed by Shovon Roy",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "version" : "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://transport.pacificjeans.com/*"],
      "js": ["content.js"]
    }
  ]
}
